<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base shape (inner area) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Glowing outline -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#80FFFF00" /> <!-- Yellowish glow, semi-transparent -->
            <corners android:radius="4dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>